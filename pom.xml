<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.kedzie</groupId>
	<artifactId>lever</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>apklib</packaging>
	
	<name>Simple Machines</name>
	<description>Physical Modeling of Simple Machines</description>
	<url>http://kedzie.github.com/Simple-Machines</url>
	<inceptionYear>2012</inceptionYear>
	
	<organization>
		<name>Marek Kedzierski</name>
		<url>http://kedzie.github.com</url>
	</organization>
	
	<developers>
		<developer>
			<email>mark.kedzierski@gmail.com</email>
			<name>Marek Kedzierski</name>
			<url>http://mark.kedzierski.googlepages.com</url>
			<roles>
				<role>Lead Developer</role>
			</roles>
		</developer>
	</developers>
	
	<licenses>
		<license>
			<name>Apache License Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	
	<scm>
		<url>https://github.com/kedzie/Simple-Machines</url>
		<connection>scm:git:git://github.com/kedzie/Simple-Machines.git</connection>
		<developerConnection>scm:git:git://github.com/kedzie/Simple-Machines.git</developerConnection>
	</scm>
	
	<issueManagement>
		<system>GitHub Issues</system>
		<url>https://github.com/kedzie/Simple-Machines/issues</url>
	</issueManagement>
	
	<properties>
		<android.debuggable>false</android.debuggable>
		<github.global.server>github</github.global.server>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.google.android</groupId>
			<artifactId>android</artifactId>
			<version>4.0.1.2</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.rajawali</groupId>
			<artifactId>rajawali</artifactId>
			<version>1.0.0</version>
			<type>apklib</type>
		</dependency>
	</dependencies>

	<build>
		<directory>bin</directory>
		<outputDirectory>bin/classes</outputDirectory>
		<sourceDirectory>src</sourceDirectory>
		<testSourceDirectory>test</testSourceDirectory>
		<finalName>${project.artifactId}</finalName>
		<plugins>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>2.3.2</version>
					<configuration><source>1.6</source><target>1.6</target></configuration>
				</plugin>
				<plugin>
					<groupId>com.jayway.maven.plugins.android.generation2</groupId>
					<artifactId>android-maven-plugin</artifactId>
					<version>3.3.0</version>
					<extensions>true</extensions>
					<configuration>
						<manifestDebuggable>${android.debuggable}</manifestDebuggable>
						<manifestVersionName />
						<manifestVersionCodeUpdateFromVersion>true</manifestVersionCodeUpdateFromVersion>
						<sdk><platform>15</platform></sdk>
						<sign><debug>false</debug></sign>
						<zipalign>
							<inputApk>${project.build.directory}/${project.build.finalName}.apk</inputApk>
							<outputApk>${project.build.directory}/${project.artifactId}-${project.version}.apk</outputApk>
						</zipalign>
					</configuration>
					<executions>
						<execution>
							<phase>process-resources</phase>
							<goals><goal>manifest-update</goal></goals>
						</execution>
						<execution>
							<phase>package</phase>
							<goals><goal>zipalign</goal></goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<artifactId>maven-jarsigner-plugin</artifactId>
					<version>1.2</version>
					<configuration>
						<archive>${project.build.directory}/${project.artifactId}-${project.version}.apk</archive>
						<keystore>android</keystore>
						<storepass>android</storepass>
						<alias>kedzieandroid</alias>
						<keypass>android</keypass>
						<verbose>true</verbose>
					</configuration>
					<executions>
						<execution>
							<phase>package</phase>
							<goals><goal>sign</goal></goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>com.github.github</groupId>
					<artifactId>downloads-maven-plugin</artifactId>
					<version>0.7-SNAPSHOT</version>
					<configuration>
						<description>${project.name} APK</description>
						<override>true</override>
					</configuration>
					<executions>
						<execution>
							<phase>deploy</phase>
							<goals><goal>upload</goal></goals>
						</execution>
					</executions>
				</plugin>
			<plugin>
				<groupId>com.github.github</groupId>
				<artifactId>site-maven-plugin</artifactId>
				<version>0.8-SNAPSHOT</version>
				<configuration>
					<message>Creating site for ${project.version}.</message>
				</configuration>
				<<executions>
					<execution>
						<phase>site</phase>
						<goals><goal>site</goal></goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-project-info-reports-plugin</artifactId>
				<version>2.1.1</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changelog-plugin</artifactId>
				<version>2.2</version>
			</plugin>
			<!--dependency>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<version>2.9.1</version>
			</dependency-->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.8.1</version>
				<configuration>
					<doclet>org.jboss.apiviz.APIviz</doclet>
					<docletArtifact>
						<groupId>org.jboss.apiviz</groupId>
						<artifactId>apiviz</artifactId>
						<version>1.3.1.GA</version>
					</docletArtifact>
					<useStandardDocletOptions>true</useStandardDocletOptions>
					<charset>UTF-8</charset>
					<encoding>UTF-8</encoding>
					<docencoding>UTF-8</docencoding>
					<breakiterator>true</breakiterator>
					<version>true</version>
					<author>true</author>
					<keywords>true</keywords>
					<additionalparam>-sourceclasspath ${project.build.outputDirectory}</additionalparam>
				</configuration>
			</plugin>
		</plugins>
	</reporting>
	
	<repositories>
		<repository>
			<id>jboss.releases</id>
			<name>JBoss releases</name>
			<url>https://repository.jboss.org/nexus/content/repositories/releases/</url>
		</repository>
	</repositories>
</project>
